<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="300" Height="250" 
        Title="AvaloniaTest"> 
  <Grid Margin="10" RowDefinitions="100,50,60"> 
    <TextBlock FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Card Master</TextBlock>
    <TextBox  FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Watermark="Your Name" UseFloatingWatermark="True" Text="{Binding theName,Mode=TwoWay}" Grid.Row="1"/> 
    <Button Grid.Row="2" FontSize="18" Margin="10" Padding="0" Width="150" >Login</Button>
  <Popup IsOpen="True" Width="300" Height="250">
    <Border Background="White">
      <TextBlock FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center">Card Masteccr</TextBlock>
    </Border>
  </Popup>
  </Grid> 
</Window>